<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">

          <%- include('includes/messages'); %>

          <h1 class="text-center">Crie uma conta ou Faça seu Login</h1>

          <div class="row">


            <div class="col-lg">

              <h3>Crie sua conta</h3>
              <p>Se você ainda não possui uma conta, faça agora mesmo!</p>

              <form class="form-cadastro" action="/login/register" method="post">
                <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                <div class="form-group">
                  <label>Seu email</label>
                  <input type="email" class="form-control" name="email">
                </div>

                <div class="form-group">
                  <label>Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Criar</button>
              </form>

            </div>


            <div class="col-lg">
              <h3>Faça seu Login</h3>
              <p>Se você já possui uma conta, faça seu login agora mesmo!</p>

              <form class="form-login" action="/login/login" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                  <label>Seu email</label>
                  <input type="email" class="form-control" name="email">
                </div>

                <div class="form-group">
                  <label>Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>

            </div>


          </div>

        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>