<%- include('includes/head'); %>

  <div id="cabecalho">
    <p>Produtos Sustentáveis
      <img src="/assets/img/icone-nexus.png" alt="icone-nexus">
    </p>

  </div>

  <header class="logo-login">
    <a href="/">
      <div id="logo2">
        <img src="/assets/img/icone-nexus.png" alt="" id="icone-nx">
        <img src="/assets/img/nexus.png" alt="" id="nome-nx">
      </div>
    </a>
  </header>

  <main>

    <section>
      <div id="form-produtor">
        <h2>Envie seu cadastro</h2>
        <p>Já é produtor? <a href="/produtor/login">Clique aqui para entrar!</a></p>
        <%- include('includes/messages'); %>
        <form class="login-form" action="/produtor/registrar" method="post">
          <input type="hidden" name="_csrf" value=<%=csrfToken %>>
          <div class="forms-clas">
            <div class="forms-clas2">
              <label for="nome">Nome</label>
              <input type="text" id="nome" name="nome" placeholder="Digite seu nome" required>
            </div>

            <div class="forms-clas2" id="segundo">
              <label for="sobrenome">Sobrenome</label>
              <input type="text" id="sobrenome" name="sobrenome" placeholder="Digite seu sobrenome" required>
            </div>
          </div>

          <label for="email">Email</label>
          <input type="email" id="emais" name="email" placeholder="Digite seu email" required>

          <label for="senha">Senha</label>
          <input type="password" id="password" name="password" placeholder="Digite sua senha" required>

          <div class="forms-clas">
            <div class="forms-clas2">
              <label for="cpf">CPF</label>
              <input type="text" id="cpf" name="cpf" placeholder="Digite seu cpf" required>
            </div>

            <div class="forms-clas2" id="segundo">
              <label for="telefone">Telefone</label>
              <input type="number" id="telefone" name="telefone" placeholder="Digite seu telefone" required>
            </div>
          </div>

          <button type="submit" id="botao">ENVIAR</button>
        </form>

      </div>
    </section>
  </main>

<%- include('includes/footer'); %>